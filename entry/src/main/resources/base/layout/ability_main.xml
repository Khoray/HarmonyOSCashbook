<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"

    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="150vp"
        ohos:width="match_parent"
        ohos:alignment="left|bottom"
        ohos:orientation="vertical"
        ohos:start_padding="17vp"
        ohos:bottom_padding="17vp"
        ohos:background_element="$color:zfbblue2"
        >
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="总计"
            ohos:text_size="17vp"
            ohos:text_color="#FFE6E6E6"
            />
        <Text
            ohos:id="$+id:total_rest"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="5vp"
            ohos:text="[0]"
            ohos:text_size="30vp"
            ohos:text_color="#FFFFFF"
            />
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:top_margin="10vp"
            ohos:orientation="horizontal"
            >

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="总支出"
                ohos:text_color="#FFE6E6E6"
                ohos:text_size="17vp"
                />
            <Text
                ohos:start_margin="15vp"
                ohos:id="$+id:pay_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="[0]"
                ohos:text_color="#FFF"
                ohos:text_size="18vp"
                />
            <Text
                ohos:start_margin="15vp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#FFE6E6E6"
                ohos:text="|"
                ohos:text_size="17vp"
                />
            <Text
                ohos:start_margin="15vp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#FFE6E6E6"
                ohos:text="总收入"
                ohos:text_size="17vp"
                />
            <Text
                ohos:start_margin="15vp"
                ohos:id="$+id:income_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#FFF"
                ohos:text="[0]"
                ohos:text_size="18vp"
                />

        </DirectionalLayout>


    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#05000000"
        >

        <Text
        ohos:id="$+id:filter_type_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="最近一天"

        ohos:text_color="$color:gray"
        ohos:text_size="17vp"
        ohos:padding="10vp"

        />
    </DirectionalLayout>

    <StackLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        >

        <ListContainer
            ohos:id="$+id:main_list_container"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#05000000"
            />
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="12vp"
            ohos:layout_alignment="bottom|right"
            ohos:orientation="horizontal"
            ohos:right_margin="12vp"
            >
            <Button
                ohos:id="$+id:filter_btn"
                ohos:height="50vp"
                ohos:width="100vp"
                ohos:background_element="$graphic:button_bg_zfbblue"
                ohos:text="筛选"
                ohos:text_color="#fff"
                ohos:text_size="17vp"
                />
            <Button
                ohos:id="$+id:addandedit_btn"
                ohos:height="50vp"
                ohos:width="100vp"
                ohos:background_element="$graphic:button_bg_zfbblue"

                ohos:text="记一笔"
                ohos:start_margin="10vp"
                ohos:text_color="#fff"
                ohos:text_size="17vp"
                />

        </DirectionalLayout>
    </StackLayout>

</DirectionalLayout>