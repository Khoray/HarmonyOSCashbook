<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="开始: "
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:start_time_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="2022年11月14日"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:start_time_modify_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="修改"
            ohos:weight="1"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Text

            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="结束:"
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:end_time_text"
            ohos:height="match_content"
            ohos:width="match_content"

            ohos:text="2022年11月14日"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:end_time_modify_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="修改"
            ohos:weight="1"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="类型: "
            ohos:weight="1"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:type_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="全部"
            ohos:weight="1"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:type_clear_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="清除"
            ohos:weight="0.5"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:type_select_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="修改"
            ohos:weight="0.5"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="3"
        >


        <TextField
            ohos:id="$+id:search_field"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="$graphic:bg_textfield"
            ohos:text_size="17vp"
            ohos:weight="2.5"
            ohos:text_alignment="center"
            ohos:hint="搜索备注内容"
            />
        <Button
            ohos:id="$+id:search_btn"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="搜索"
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="4"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="总收入:"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Text
            ohos:id="$+id:pay_text"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:layout_alignment="center"
            ohos:text="[0]"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="总支出:"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Text
            ohos:id="$+id:income_text"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="[0]"
            ohos:text_size="17vp"
            ohos:weight="1"
            />

    </DirectionalLayout>
    <StackLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        >

        <ListContainer
            ohos:id="$+id:main_list_container"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#05000000"
            />
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="10vp"
            ohos:layout_alignment="bottom|right"
            ohos:orientation="horizontal"
            ohos:right_margin="10vp"
            >
            <Button
                ohos:id="$+id:addandedit_btn"
                ohos:height="50vp"
                ohos:width="100vp"
                ohos:background_element="$ohos:graphic:button_bg_light"
                ohos:text="记一笔"
                ohos:text_size="17vp"
                />

        </DirectionalLayout>
    </StackLayout>

</DirectionalLayout>