<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="4"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="总收入:"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Text
            ohos:id="$+id:pay_text"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:layout_alignment="center"
            ohos:text="[0]"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="总支出:"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Text
            ohos:id="$+id:income_text"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="[0]"
            ohos:text_size="17vp"
            ohos:weight="1"
            />

    </DirectionalLayout>
    <StackLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        >

        <ListContainer
            ohos:id="$+id:main_list_container"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#05000000"
            />
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="10vp"
            ohos:layout_alignment="bottom|right"
            ohos:orientation="horizontal"
            ohos:right_margin="10vp"
            >
            <Button
                ohos:id="$+id:filter_btn"
                ohos:height="50vp"
                ohos:width="100vp"
                ohos:background_element="$ohos:graphic:button_bg_light"
                ohos:text="筛选"
                ohos:text_size="17vp"
                />
            <Button
                ohos:id="$+id:addandedit_btn"
                ohos:height="50vp"
                ohos:width="100vp"
                ohos:background_element="$ohos:graphic:button_bg_light"
                ohos:text="记一笔"
                ohos:text_size="17vp"
                />

        </DirectionalLayout>
    </StackLayout>

</DirectionalLayout>