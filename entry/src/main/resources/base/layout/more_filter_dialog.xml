<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="开始: "
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:start_time_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="-"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:start_time_modify_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="清除"
            ohos:weight="1"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Text

            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="结束:"
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:end_time_text"
            ohos:height="match_content"
            ohos:width="match_content"

            ohos:text="-"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:end_time_modify_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="清除"
            ohos:weight="1"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="类型:"
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:type_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="全部"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:type_clear_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="清除"
            ohos:weight="1"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="3.5"
        >


        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:weight="1"
            ohos:text="金额范围:"
            />
        <TextField
            ohos:id="$+id:low_value_tf"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:weight="1.0"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:bg_textfield"
            ohos:text=""
            />

        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:weight="0.5"
            ohos:text_alignment="center"
            ohos:hint="~"
            />
        <TextField
            ohos:id="$+id:high_value_tf"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:weight="1.0"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:bg_textfield"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="3"
        >


        <TextField
            ohos:id="$+id:search_field"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="$graphic:bg_textfield"
            ohos:text_size="17vp"
            ohos:weight="3"
            ohos:text_alignment="center"
            ohos:hint="搜索备注内容"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="3"
        >


       <Button
           ohos:id="$+id:more_filter_cancel_btn"
           ohos:height="match_parent"
           ohos:width="match_parent"
           ohos:weight="1.5"
           ohos:text="取消"
           ohos:text_size="17vp"
           />
        <Button
            ohos:id="$+id:more_filter_confirm_btn"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1.5"
            ohos:text="确定"
            ohos:text_size="17vp"
            />

    </DirectionalLayout>
</DirectionalLayout>