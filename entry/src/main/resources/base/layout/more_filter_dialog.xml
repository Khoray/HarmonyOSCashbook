<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:orientation="horizontal"
        ohos:alignment="center"
        >
        <Image
            ohos:height="22vp"
            ohos:width="22vp"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:morefilter"
            />
        <Text
            ohos:id="$+id:addandedit_title"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:start_margin="10vp"
            ohos:text="自定义筛选"
            ohos:text_size="20fp"
            ohos:text_color="#000000"/>

    </DirectionalLayout>

    <Text
        ohos:width="match_parent"
        ohos:height="1vp"
        ohos:text_size="18fp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="5vp"
        ohos:background_element="$graphic:button_bg_zfbblue"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Image
            ohos:height="17vp"
            ohos:width="17vp"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:start"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="5vp"
            ohos:text="开始: "
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:start_time_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="-"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:start_time_modify_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="清除"
            ohos:weight="1"
            ohos:text_color="$color:zfbblue2"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:total_weight="3"
        ohos:top_margin="10vp"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Image
            ohos:height="17vp"
            ohos:width="17vp"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:end"
            />
        <Text

            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="5vp"
            ohos:text="结束:"
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:end_time_text"
            ohos:height="match_content"
            ohos:width="match_content"

            ohos:text="-"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:end_time_modify_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="清除"
            ohos:weight="1"
            ohos:text_color="$color:zfbblue2"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:top_margin="10vp"
        ohos:total_weight="3"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        >
        <Image
            ohos:height="17vp"
            ohos:width="17vp"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:type"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="5vp"
            ohos:text="类型:"
            ohos:weight="0.5"
            ohos:text_size="17vp"
            />
        <Text
            ohos:id="$+id:type_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="全部"
            ohos:weight="1.5"
            ohos:text_size="17vp"
            />
        <Button
            ohos:id="$+id:type_clear_btn"
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:text="清除"
            ohos:weight="1"
            ohos:text_color="$color:zfbblue2"
            ohos:margin="2vp"
            ohos:text_size="17vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:top_margin="10vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="3.5"
        >
        <Image
            ohos:height="17vp"
            ohos:width="17vp"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:jiangjinxiangqing"
            />

        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:start_margin="5vp"
            ohos:weight="1"
            ohos:text="金额范围:"
            />
        <TextField
            ohos:id="$+id:low_value_tf"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:weight="1.0"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:bg_textfield"
            ohos:text=""
            />

        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:weight="0.5"
            ohos:text_alignment="center"
            ohos:hint="~"
            />
        <TextField
            ohos:id="$+id:high_value_tf"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_size="17vp"
            ohos:weight="1.0"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:bg_textfield"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:top_margin="10vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:total_weight="3"
        >

        <Image
            ohos:height="17vp"
            ohos:width="17vp"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:search"
            />
        <TextField
            ohos:id="$+id:search_field"
            ohos:height="match_content"
            ohos:start_margin="5vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:bg_textfield"
            ohos:text_size="17vp"
            ohos:weight="3"
            ohos:text_alignment="center"
            ohos:hint="搜索备注内容"
            />
    </DirectionalLayout>
    <Text
        ohos:width="match_parent"
        ohos:height="1vp"
        ohos:text_size="18fp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="5vp"
        ohos:background_element="$graphic:button_bg_zfbblue"/>
    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:bottom_margin="5vp"
        ohos:total_weight="3"
        >


       <Button
           ohos:id="$+id:more_filter_cancel_btn"
           ohos:height="match_parent"
           ohos:width="match_parent"
           ohos:weight="1.5"
           ohos:text="取消"
           ohos:text_size="17vp"
           />
        <Button
            ohos:id="$+id:more_filter_confirm_btn"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_color="$color:zfbblue2"
            ohos:weight="1.5"
            ohos:text="确定"
            ohos:text_size="17vp"
            />

    </DirectionalLayout>
</DirectionalLayout>