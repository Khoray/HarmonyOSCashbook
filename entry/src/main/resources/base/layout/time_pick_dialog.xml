<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:padding="3vp"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:total_weight="5"
        >
        <DatePicker
            ohos:id="$+id:time_date_pick"
            ohos:height="match_content"
            ohos:text_size="17vp"
            ohos:selected_text_color="$color:zfbblue2"
            ohos:width="match_parent"
            ohos:weight="3"
            />
        <TimePicker
            ohos:id="$+id:time_time_pick"
            ohos:height="match_parent"
            ohos:text_size="17vp"
            ohos:selected_text_color="$color:zfbblue2"
            ohos:weight="2"
            ohos:width="match_parent"
            />
    </DirectionalLayout>
    <Text
        ohos:width="match_parent"
        ohos:height="1vp"
        ohos:text_size="18fp"
        ohos:top_margin="5vp"
        ohos:background_element="$color:zfbblue2"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:total_weight="2"
        >
        <Button
            ohos:id="$+id:time_pick_cancel"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:text="取消"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Button
            ohos:id="$+id:time_pick_confirm"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:text="确认"
            ohos:text_color="$color:zfbblue2"
            ohos:text_size="17vp"
            ohos:weight="1"
            />

    </DirectionalLayout>
</DirectionalLayout>