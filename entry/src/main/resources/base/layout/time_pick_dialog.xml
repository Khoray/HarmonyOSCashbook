<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:padding="3vp"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:total_weight="5"
        >
        <DatePicker
            ohos:id="$+id:time_date_pick"
            ohos:height="match_content"
            ohos:text_size="17vp"
            ohos:width="match_parent"
            ohos:weight="2.5"
            ohos:background_element="#C89FDEFF">
        </DatePicker>
        <TimePicker
            ohos:id="$+id:time_time_pick"
            ohos:height="match_parent"
            ohos:text_size="17vp"
            ohos:weight="2.5"
            ohos:width="match_parent"
            ohos:background_element="#C89FDEFF">
        </TimePicker>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:total_weight="2"
        >
        <Button
            ohos:id="$+id:time_pick_confirm"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:text="确认"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
        <Button
            ohos:id="$+id:time_pick_cancel"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:text="取消"
            ohos:background_element="$ohos:graphic:button_bg_light"
            ohos:text_size="17vp"
            ohos:weight="1"
            />
    </DirectionalLayout>
</DirectionalLayout>