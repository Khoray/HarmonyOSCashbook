<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:start_padding="10vp"
    ohos:end_padding="10vp"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"

        >
        <Image
            ohos:id="$+id:item_majortype_img"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:image_src="$media:icon"
            ohos:padding="5vp"
            ohos:scale_mode="stretch"

            />
        <DirectionalLayout
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            ohos:start_margin="7vp"
            >
            <DirectionalLayout
                ohos:top_margin="6vp"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:total_weight="2"
                >
                <Text
                    ohos:id="$+id:item_type_text"
                    ohos:height="match_parent"
                    ohos:width="0"
                    ohos:text="[type]"
                    ohos:weight="1"
                    ohos:text_size="20vp"
                    />
                <Text
                    ohos:id="$+id:item_money_text"
                    ohos:height="match_parent"
                    ohos:width="0"
                    ohos:text_alignment="right"
                    ohos:text="[+-money]"
                    ohos:weight="1"
                    ohos:text_size="20vp"
                    />


            </DirectionalLayout>
            <DirectionalLayout
                ohos:top_margin="1vp"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                >
                <Text
                    ohos:id="$+id:item_time_text"
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:text_alignment="right"
                    ohos:text_color="$ohos:color:id_color_text_hint"
                    ohos:text="[time]"
                    ohos:text_size="15vp"
                    />
                <Text
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:start_margin="5vp"
                    ohos:text="|"
                    ohos:text_color="$ohos:color:id_color_text_hint"
                    ohos:text_size="15vp"
                    />
                <Text
                    ohos:id="$+id:item_note_text"
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:start_margin="5vp"
                    ohos:text="[note]"
                    ohos:text_color="$ohos:color:id_color_text_hint"
                    ohos:text_size="15vp"
                    />



            </DirectionalLayout>

        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>