<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"

        >
        <Image
            ohos:id="$+id:item_majortype_img"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:image_src="$media:icon"
            ohos:padding="5vp"
            ohos:scale_mode="stretch"

            />
        <DirectionalLayout
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            ohos:start_margin="7vp"
            >
            <DirectionalLayout
                ohos:height="40vp"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:total_weight="2"
                >
                <Text
                    ohos:id="$+id:item_type_text"
                    ohos:height="match_parent"
                    ohos:width="0"
                    ohos:text="[type]"
                    ohos:weight="1"
                    ohos:text_size="35vp"
                    />
                <Text
                    ohos:id="$+id:item_money_text"
                    ohos:height="match_parent"
                    ohos:width="0"
                    ohos:text_alignment="right"
                    ohos:text="[+-money]"
                    ohos:weight="1"
                    ohos:text_size="35vp"
                    />


            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="20vp"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:total_weight="2"
                >
                <Text
                    ohos:id="$+id:item_note_text"
                    ohos:height="match_parent"
                    ohos:width="0"
                    ohos:text="[note]"
                    ohos:text_color="$ohos:color:id_color_text_hint"
                    ohos:weight="0.8"
                    ohos:text_size="15vp"
                    />
                <Text
                    ohos:id="$+id:item_time_text"
                    ohos:height="match_parent"
                    ohos:width="0"
                    ohos:text_alignment="right"
                    ohos:text_color="$ohos:color:id_color_text_hint"
                    ohos:text="[time]"
                    ohos:weight="1.2"
                    ohos:text_size="15vp"
                    />


            </DirectionalLayout>

        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>