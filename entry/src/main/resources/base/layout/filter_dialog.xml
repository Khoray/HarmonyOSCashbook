<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:top_margin="15fp"
        ohos:orientation="horizontal"
        ohos:layout_alignment="horizontal_center"
        ohos:alignment="center"
        ohos:bottom_margin="15fp"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:more_filter_btn"
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:image_src="$media:icon"
                ohos:margin="6fp"
                ohos:scale_mode="stretch">

            </Image>


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#8B8B8A"
                ohos:text="更多筛选"
                ohos:text_size="12fp">

            </Text>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:yearrecord_btn"
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:margin="6fp"
                ohos:image_src="$media:icon"
                ohos:scale_mode="stretch">

            </Image>


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#8B8B8A"
                ohos:text="最近365天"
                ohos:text_size="12fp">

            </Text>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:monthrecord_btn"
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:image_src="$media:icon"
                ohos:margin="6fp"
                ohos:scale_mode="stretch">

            </Image>


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#8B8B8A"
                ohos:text="最近30天"
                ohos:text_size="12fp">

            </Text>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:dayrecord_btn"
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:image_src="$media:icon"
                ohos:margin="6fp"
                ohos:scale_mode="stretch">

            </Image>


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#8B8B8A"
                ohos:text="最近1天"
                ohos:text_size="12fp">

            </Text>

        </DirectionalLayout>










    </DirectionalLayout>
</DirectionalLayout>